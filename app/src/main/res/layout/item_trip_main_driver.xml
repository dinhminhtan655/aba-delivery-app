<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.tandm.abadeliverydriver.main.home.fragmenthomedriver.model.StoreDriver" />

    </data>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp10"
        app:cardCornerRadius="@dimen/dp10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemABAStoreCodeDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{item.getStoreCodeABA(item.stoP_TYPE)}"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/black"
                tools:text="huhu" />

            <TextView
                android:id="@+id/itemStoreCodeDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{item.getStoreCode(item.stoP_TYPE)}"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                android:textColor="@color/black"
                tools:text="huhu" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/maCH"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="@dimen/dp5"
                    android:layout_height="0dp"/>

                <TextView
                    android:id="@+id/itemCHDriver"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:text="@{item.store_Name}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/maCH"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="@dimen/dp5"
                    android:layout_height="0dp"/>

                <TextView
                    android:id="@+id/itemCHABADriver"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:text="@{item.store_Name_ABA}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/addressCH"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="@dimen/dp5"
                    android:layout_height="0dp"/>

                <TextView
                    android:id="@+id/itemAddressDriver"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:text="@{item.addresS_LINE}"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:gravity="center"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:text="@string/phoneCH"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="@dimen/dp5"
                    android:layout_height="0dp"/>

                <TextView
                    android:id="@+id/itemPhoneCustomerDriver"
                    android:text="@{item.getCustomerClientPhone(item.customerClientPhone)}"
                    android:textColor="#0929E9"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"/>

                <View
                    android:layout_width="@dimen/dp5"
                    android:layout_height="0dp"/>

                <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                    android:id="@+id/toggleDriver"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textOn="Đã tới"
                    android:textOff="Đã tới"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                    app:checkedTextColor="#000"
                    app:borderWidth="2dp"
                    android:layout_weight="1.2"
                    app:checkedColor="@color/green_arrived"
                    app:radius="10dp"
                    >
                </me.rishabhkhanna.customtogglebutton.CustomToggleButton>

                <View
                    android:layout_width="@dimen/dp5"
                    android:layout_height="0dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemTvTotalCartonDriver"
                    android:text="@string/totalCH2"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="@dimen/dp5"
                    android:layout_height="0dp"/>

                <TextView
                    android:id="@+id/itemTotalCartonDriver"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:text="@{item.getTotalCarton(item.totalCarton)}"
                    android:textColor="@color/red"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


