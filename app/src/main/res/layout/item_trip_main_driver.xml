            <LinearLayout
                android:id="@+id/layoutItemTwoBtn"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:weightSum="2"
                android:gravity="center">


                <Button
                    android:id="@+id/item_btnSuCoDriver"
                    android:text="Sự cố lớn"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/red"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="@dimen/dp10"
                    android:layout_height="0dp"/>

                <Button
                    android:id="@+id/item_btnNhanHangDriver"
                    android:text="@string/problem2"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/red"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:gravity="center">

                <Button
                    android:id="@+id/item_btnGiaoHangDriver2"
                    android:text="Giao hàng"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_btnGiaoHubDriver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:gravity="center">

                <Button
                    android:id="@+id/item_btnGiaoHubDriver"
                    android:text="Giao Cho Biker(Hub)"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>

