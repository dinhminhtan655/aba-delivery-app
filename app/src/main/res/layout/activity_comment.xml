<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.home.fragmenthomedrivercustomer.CommentActivity">

    <TextView
        android:id="@+id/tvSubject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="48dp"
        android:paddingLeft="16dp"
        android:textColor="#000"
        android:textStyle="bold" />

    <View
        android:id="@+id/v_shadow"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/tvSubject"
        android:background="@drawable/shadow" />


    <RelativeLayout
        android:id="@+id/rlZoneComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/outline_top"
        android:minHeight="48dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivSendComment"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/send_24" />

        <EditText
            android:id="@+id/etComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/ivSendComment"
            android:background="@null"
            android:hint="Viết một bình luận"
            android:inputType="textMultiLine"
            android:minHeight="48dp"
            android:paddingLeft="10dp"
            android:textColor="#000"
            android:textCursorDrawable="@null" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOrderDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rlZoneComment"
        android:layout_below="@id/tvSubject"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_comment"
        android:visibility="visible" />

</RelativeLayout>