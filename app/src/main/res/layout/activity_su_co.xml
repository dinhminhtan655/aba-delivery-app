<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.suco.SuCoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbSuCo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">


            <TextView
                android:id="@+id/tvToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BÁO CÁO VẤN ĐỀ"
                android:textAlignment="center"
                android:layout_marginRight="@dimen/dp25"
                android:textColor="#fff"
                android:textAppearance="@style/TextAppearance.AppCompat.Inverse"
                />


        </androidx.appcompat.widget.Toolbar>


        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/dp10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:layout_marginTop="@dimen/dp20"
                    android:layout_marginBottom="@dimen/dp20"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="@dimen/sp15"
                            android:text="Thời gian:"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="@dimen/sp15"
                            android:text="Mã cửa hàng:"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:textSize="@dimen/sp15"
                            android:text="Cửa hàng:"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:textSize="@dimen/sp15"
                            android:text="Địa chỉ:"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:textSize="@dimen/sp15"
                            android:id="@+id/tvThoiGianBaoCao"
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="@dimen/sp15"
                            android:id="@+id/tvMaCuaHangBaoCao"
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="@dimen/sp15"
                            android:id="@+id/tvCuaHangBaoCao"
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="@dimen/sp15"
                            android:id="@+id/tvDiaChiBaoCao"
                            android:singleLine="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp20"
            app:cardCornerRadius="@dimen/dp5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/dp15"
                android:orientation="vertical">


                <TextView
                    android:text="@string/baocaotitle"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"
                    android:textColor="@color/blue_strong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    app:boxCornerRadiusBottomEnd="@dimen/dp10"
                    app:boxCornerRadiusBottomStart="@dimen/dp10"
                    app:boxCornerRadiusTopEnd="@dimen/dp10"
                    app:boxCornerRadiusTopStart="@dimen/dp10"
                    app:hintAnimationEnabled="true"
                    android:layout_marginTop="@dimen/dp10">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtProblem"
                        android:hint="@string/pickproblem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/clicker"
                        android:drawableRight="@drawable/upchevron"
                        android:focusable="false"
                        />



                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:text="@string/note"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp10"
                    android:textColor="@color/blue_strong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    app:boxCornerRadiusBottomEnd="@dimen/dp10"
                    app:boxCornerRadiusBottomStart="@dimen/dp10"
                    app:boxCornerRadiusTopEnd="@dimen/dp10"
                    app:boxCornerRadiusTopStart="@dimen/dp10"
                    app:hintAnimationEnabled="true"
                    android:layout_marginTop="@dimen/dp10">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtNote"
                        android:hint="@string/note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="10"
                        android:minLines="4"
                        android:inputType="textMultiLine"
                        android:scrollbars="vertical"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:text="@string/picture"
                    android:textSize="@dimen/sp15"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/dp10"
                    android:textColor="@color/blue_strong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="3"
                    android:layout_marginTop="@dimen/dp10"
                    android:layout_marginBottom="@dimen/dp20"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="@dimen/dp80"
                            android:layout_height="@dimen/dp80"
                            android:src="@drawable/classiccamerapng"
                            android:layout_alignParentTop="true"
                            android:layout_alignRight="@+id/button1"
                            android:layout_alignEnd="@+id/button1"
                            />

                        <ImageButton
                            android:visibility="invisible"
                            android:id="@+id/button1"
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/ic_close_red"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="@dimen/dp80"
                            android:layout_height="@dimen/dp80"
                            android:src="@drawable/classiccamerapng"
                            android:layout_alignParentTop="true"
                            android:layout_alignRight="@+id/button2"
                            android:layout_alignEnd="@+id/button2"
                            />

                        <ImageButton
                            android:visibility="invisible"
                            android:id="@+id/button2"
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/ic_close_red"/>

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="@dimen/dp80"
                            android:layout_height="@dimen/dp80"
                            android:src="@drawable/classiccamerapng"
                            android:layout_alignParentTop="true"
                            android:layout_alignRight="@+id/button3"
                            android:layout_alignEnd="@+id/button3"
                            />

                        <ImageButton
                            android:visibility="invisible"
                            android:id="@+id/button3"
                            android:layout_width="@dimen/dp40"
                            android:layout_height="@dimen/dp40"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/ic_close_red"/>

                    </RelativeLayout>



                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:gravity="bottom">

            <Button
                android:id="@+id/btnBaoCao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Gửi báo cáo"
                android:textAlignment="center"
                />


        </LinearLayout>





    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>