<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coorHomeDriver"
    android:background="@drawable/bg_resize"
    android:backgroundTint="#C3A07E7E"
    android:backgroundTintMode="screen"
    tools:context=".main.home.fragmenthomedriver.HomeDriverFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                app:layout_collapseMode="parallax">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/dp10"
                    >

                    <Button
                        android:id="@+id/btnChuyen1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="Chuyến"/>
                    
                    <androidx.legacy.widget.Space
                        android:layout_width="@dimen/dp10"
                        android:layout_height="0dp"/>

                    <Button
                        android:id="@+id/btnChuyen2"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                        android:backgroundTint="@color/colorPrimary"
                        android:text="Chuyến 2"/>

                    <androidx.legacy.widget.Space
                        android:layout_width="@dimen/dp10"
                        android:layout_height="0dp"/>

                    <Button
                        android:id="@+id/btnChuyen3"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimary"
                        android:textAppearance="@style/TextAppearance.AppCompat.Small.Inverse"
                        android:text="CH Biker"/>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/dp5"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvShipmentMain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Bắt đầu"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:textColor="@color/black"
                                 />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Kết thúc"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:textColor="@color/black"
                                />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp2"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/tvStartDateMain"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:textColor="@color/black" />

                            <TextView
                                android:id="@+id/tvEndDateMain"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                android:textColor="@color/black" />
                        </LinearLayout>


<!--                        <LinearLayout-->

<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_marginTop="@dimen/dp2"-->
<!--                            android:orientation="horizontal"-->
<!--                            android:weightSum="2">-->

<!--                            <TextView-->
<!--                                android:id="@+id/tvStartTimeMain"-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:layout_gravity="center"-->
<!--                                android:layout_weight="1"-->
<!--                                android:gravity="center"-->
<!--                                android:textColor="@color/black" />-->

<!--                            <TextView-->
<!--                                android:id="@+id/tvEndTimeMain"-->
<!--                                android:layout_width="match_parent"-->
<!--                                android:layout_height="wrap_content"-->
<!--                                android:layout_gravity="center"-->
<!--                                android:layout_weight="1"-->
<!--                                android:gravity="center"-->
<!--                                android:textColor="@color/black" />-->
<!--                        </LinearLayout>-->


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                                android:id="@+id/toggleKhoDriverDen"
                                android:layout_width="@dimen/dp80"
                                android:layout_height="wrap_content"
                                android:textOn="Đến kho"
                                android:textOff="Đến kho"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                app:checkedTextColor="#000"
                                android:layout_gravity="center"
                                app:checkedColor="@color/green_arrived">
                            </me.rishabhkhanna.customtogglebutton.CustomToggleButton>

                            <ImageView
                                android:id="@+id/imgArrow1"
                                android:layout_width="@dimen/dp20"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp10"
                                android:src="@drawable/arrowright"/>

                            <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                                android:id="@+id/toggleKhoDriverPickUp"
                                android:layout_width="@dimen/dp80"
                                android:layout_height="wrap_content"
                                android:textOn="Lấy hàng"
                                android:textOff="Lấy hàng"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                app:checkedTextColor="#000"
                                android:layout_gravity="center"
                                app:checkedColor="@color/green_arrived">
                            </me.rishabhkhanna.customtogglebutton.CustomToggleButton>

                            <ImageView
                                android:id="@+id/imgArrow2"
                                android:layout_width="@dimen/dp20"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp10"
                                android:src="@drawable/arrowright"/>

                            <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                                android:id="@+id/toggleKhoDriverPickUpDone"
                                android:layout_width="@dimen/dp80"
                                android:layout_height="wrap_content"
                                android:textOn="Lấy xong"
                                android:textOff="Lấy xong"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                app:checkedTextColor="#000"
                                android:layout_gravity="center"
                                app:checkedColor="@color/green_arrived">
                            </me.rishabhkhanna.customtogglebutton.CustomToggleButton>

                            <ImageView
                                android:id="@+id/imgArrow3"
                                android:layout_width="@dimen/dp20"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/dp10"
                                android:src="@drawable/arrowright"/>

                            <me.rishabhkhanna.customtogglebutton.CustomToggleButton
                                android:id="@+id/toggleKhoDriver"
                                android:layout_width="@dimen/dp80"
                                android:layout_height="wrap_content"
                                android:textOn="Rời kho"
                                android:textOff="Rời kho"
                                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                                app:checkedTextColor="#000"
                                android:layout_gravity="center"
                                app:checkedColor="@color/green_arrived">
                            </me.rishabhkhanna.customtogglebutton.CustomToggleButton>




                        </LinearLayout>



                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/vp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp120" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>



        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchDriver"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:searchIcon="@drawable/search_black"
            android:inputType="number"
            android:iconifiedByDefault="false">
            <requestFocus/>
        </androidx.appcompat.widget.SearchView>


    </com.google.android.material.appbar.AppBarLayout>



    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMainDriver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_trip_main_driver"
            />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

<!--    <com.google.android.material.floatingactionbutton.FloatingActionButton-->
<!--        android:id="@+id/fabHomeDriver"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_gravity="bottom|end"-->
<!--        android:layout_margin="@dimen/dp16"-->
<!--        android:src="@drawable/more_horiz"-->
<!--        />-->

    <Button
        android:id="@+id/btnComplete"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:backgroundTint="@color/green_current"
        android:text="Nhấn Vào Đây Để Hoàn Thành Nếu Đã Giao Xong"
        android:textStyle="bold"
        android:visibility="gone" />

<!--    <include-->
<!--        android:id="@+id/fabLayout"-->
<!--        layout="@layout/fab_layout"/>-->


    <LinearLayout
        android:id="@+id/lnLottie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie"
            android:layout_width="@dimen/dp300"
            android:layout_height="@dimen/dp300"
            android:layout_gravity="center"
            android:gravity="center"
            app:lottie_rawRes="@raw/no_internet"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <TextView
            android:id="@+id/tvThongBao"
            android:text="@string/thieumanhanvien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/sp20"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            />
    </LinearLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>


